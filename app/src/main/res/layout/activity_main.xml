<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medi5"
    android:orientation="vertical"
    tools:context="com.example.esha.medihome.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="Continue"
            android:clickable="true"
            android:textColor="#01579B"
            android:textSize="30dp"
            android:textStyle="bold"
            style="@style/Base.TextAppearance.AppCompat.Body1" android:textAllCaps="false"
            android:id="@+id/home_page_continue"
            android:background="@drawable/edittextstyle"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="About Us"
            android:clickable="true"
            android:textColor="#01579B"
            android:textSize="30dp"

            android:textStyle="bold" style="@style/Base.TextAppearance.AppCompat.Body1" android:textAllCaps="false" android:id="@+id/home_page_about" android:background="@drawable/edittextstyle"/></LinearLayout>

</RelativeLayout>
