<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black2"
    android:padding="10dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context="com.example.esha.medihome.LoginAndSignUp.SignUpPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#ffff"
                android:layout_marginTop="19dp"
                android:textSize="45dp"
                android:textStyle="italic"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Its free and easy to access"
                android:textColor="#ffff"
                android:textStyle="italic"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/regi_user"
                android:background="@drawable/edittextstyle"
                android:hint="Username"
                android:ems="10"
                android:textColor="#f9d7db"
                android:padding="10dp"
                android:maxLines="1"
                android:layout_marginTop="60dp"
                android:textColorHint="#f9d7db"
                android:inputType="text"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:hint="email adress"
                android:textColor="#f9d7db"
                android:textColorHint="#f9d7db"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:padding="10dp"
                android:layout_marginTop="7dp"
                android:id="@+id/regi_email"
                android:maxLines="1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittextstyle"
                android:textColor="#f9d7db"
                android:ems="10"
                android:padding="10dp"
                android:maxLines="1"
                android:id="@+id/regi_phone"
                android:inputType="phone"
                android:textColorHint="#f9d7db"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ems="10"
                android:maxLines="1"
                android:hint="Password"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittextstyle"
                android:textColorHint="#f9d7db"
                android:id="@+id/regi_pass"
                android:inputType="textPassword"
                android:textColor="#f9d7db"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittextstyle"
                android:padding="10dp"
                android:ems="10"
                android:maxLines="1"
                android:hint="Confirm Password"
                android:textColorHint="#f9d7db"
                android:id="@+id/regi_con_pass"
                android:inputType="textPassword"
                android:textColor="#f9d7db"/>
            <Button
                android:layout_width="90dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text="Continue"
                android:clickable="true"
                android:textColor="#FFFFFF"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textAllCaps="false"
                android:id="@+id/regi_button"
                android:background="@drawable/editbutton"

                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
